pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'cd /var/lib/jenkins/workspace/Pipeline_demo'
                sh 'mvn build'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
